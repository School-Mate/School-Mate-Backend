datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:4126@localhost:5432/dev"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String        @id @default(uuid())
  email       String?        @unique
  password    String?
  name        String
  provider    String        // id, google, kakao
  profile     String?
  SocialLogin SocialLogin?
}

model SocialLogin {
  accessToken  String
  refreshToken String
  provider     String // google, kakao
  userId       String @id @default(uuid())
  user         User   @relation(fields: [userId], references: [id])
}